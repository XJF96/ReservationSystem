<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/ReservationBt"
        android:background="@drawable/yuyue"
        android:layout_height="120dp"
        android:layout_width="125dp" />
    <ImageButton
        android:id="@+id/SelectBt"
        android:background="@drawable/yuyue"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/ReservationBt"
        android:layout_width="125dp" />
    <ImageButton
        android:id="@+id/RepairBt"
        android:background="@drawable/yuyue"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/SelectBt"
        android:layout_width="125dp" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/aaBt"
            android:background="@drawable/yuyue"
            android:layout_height="120dp"
            android:layout_width="125dp" />
        <ImageButton
            android:id="@+id/bbBt"
            android:background="@drawable/yuyue"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/aaBt"
            android:layout_width="125dp" />
        <ImageButton
            android:id="@+id/helpBt"
            android:background="@drawable/yuyue"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/bbBt"
            android:layout_width="125dp" />
    </RelativeLayout>



</LinearLayout>
